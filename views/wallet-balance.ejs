 <container>
     <row>
         <div class="col-sm-12">
             <div class="card"style="width:500px;margin:auto;height:500px">
                 <div>
                     <div class="form-group">
                         <label>Enter Wallet Address</label>
                         <input type="text"class="form-control"id="wallet_address"/>
                     </div>
                     <div class="form-group">
                        <button  onclick="checkBalance()" class="btn btn-primary"value="check now">Check Now</button>
                   </div>
                     <div class="form-group">
                          <p>balance:<span id="wallet-balance"></span></p>
                     </div>
                    </div>
             </div>
         </div>
     </row>
 </container>
<script>
    function checkBalance(){
        let address=$("#wallet_address").val();
        $.ajax({type:"get",
               url:"/users/wallet",
              data:{wallet:address},
               success:function(res){
                   if(res){
                       $("#wallet-balance").html(res);
                   }else
                    {
                        alert("wrong wallet address")
                    }
               }});
    }
</script>